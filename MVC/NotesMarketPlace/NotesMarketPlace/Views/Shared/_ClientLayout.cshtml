<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Notes-MarketPlace</title>

    <!-- Favicon-->
    <link rel="shortcut icon" href="../../favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/icons-1.4.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/FrontPanel/css/upload.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/FrontPanel/css/style.css" rel="stylesheet" type="text/css" />

    <!-- Responsive CSS -->
    <link href="~/Content/FrontPanel/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- Modernizr JS -->
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <!-- JQuery -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Content/FrontPanel/js/upload.js"></script>
    <script src="~/Content/FrontPanel/js/script.js"></script>

</head>
<body>

    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg fixed-top ">
            <div class="container p-0">
                <div class="row">

                    <!-- Logo -->
                    <div class="col-md-3 navbar-header">
                        <a class="navbar-brand text-left" href="@Url.Action("Home", "Home")">
                            <img src="../../Content/images/logo.png" alt="logo">
                        </a>
                    </div>

                    <!-- Link -->
                    <div class="text-right col-md-9 collapse navbar-collapse p-0" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item"><a class="nav-link @(ViewBag.Title == "SearchNotes"? "active" : "" )" href="@Url.Action("SearchNotes", "Home")">Search Notes</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewBag.Title == "SellYourNotes"? "active" : "" )" href="@Url.Action("SellYourNotes", "Home")">Sell Your Notes</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "BuyerRequest" ? "active" : "" )" href="@Url.Action("BuyerRequest", "Home")">Buyer Requests</a></li>
                            }
                            <li class="nav-item"><a class="nav-link @(ViewBag.Title == "Faq"? "active" : "" )" href="@Url.Action("Faq", "Home")">FAQ</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewBag.Title == "ContactUs"? "active" : "" )" href="@Url.Action("ContactUs", "Home")">Contact Us</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                                           aria-haspopup="true" aria-expanded="false">
                                            <img src="/@ViewBag.UserProfile" width="30" height="30" alt="user-image"
                                                 class="d-inline-block align-top avatar-header rounded-circle">
                                        </a>

                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item @(ViewBag.Title == "UserProfile"? "active" : "" )" href="@Url.Action("UserProfile", "Account")">My Profile</a>
                                            <a class="dropdown-item @(ViewBag.Title == "MyDownloads"? "active" : "" )" href="@Url.Action("MyDownloads", "Home")">My Download</a>
                                            <a class="dropdown-item @(ViewBag.Title == "MySoldNotes"? "active" : "" )" href="@Url.Action("MySoldNotes", "Home")">My Sold Notes</a>
                                            <a class="dropdown-item @(ViewBag.Title == "MyRejectedNotes"? "active" : "" )" href="@Url.Action("MyRejectedNotes", "Home")">My Rejected Notes</a>
                                            <a class="dropdown-item @(ViewBag.Title == "ChangePassword"? "active" : "" )" href="@Url.Action("ChangePassword", "Account")">Change Password</a>
                                            <a class="dropdown-item btn-logout" href="@Url.Action("LogOut", "Account")">LogOut</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("LogOut", "Account")">LogOut</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">LogIn</a></li>
                            }
                        </ul>
                    </div>

                    <!-- Mobile link -->
                    <div class="mobile-nav col-md-8 text-right">
                        <img src="../../Content/images/menu.png" alt="menu" id="mobile-nav-open-btn" class="text-right">
                    </div>

                    <div id="mobile-nav" class="text-left">
                        <span id="mobile-nav-close-btn">
                            <img src="../../Content/images/xmark.png" alt="close-image">
                        </span>
                        <div id="mobile-nav-content">
                            <ul class="nav navig">
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "SearchNotes"? "active" : "" )" href="@Url.Action("SearchNotes", "Home")">Search Notes</a></li>
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "SellYourNotes"? "active" : "" )" href="@Url.Action("SellYourNotes", "Home")">Sell Your Notes</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item"><a class="nav-link @(ViewBag.Title == "BuyerRequest" ? "active" : "" )" href="@Url.Action("BuyerRequest", "Home")">Buyer Requests</a></li>
                                }
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "Faq"? "active" : "" )" href="@Url.Action("Faq", "Home")">FAQ</a></li>
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "ContactUs"? "active" : "" )" href="@Url.Action("ContactUs", "Home")">Contact Us</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        <div class="dropdown">
                                            <a href="#collapseExample3" data-toggle="collapse" role="button"
                                               aria-expanded="false" aria-controls="collapseExample3"
                                               class="nav-link nav-link-custom">
                                                <img src="/@ViewBag.UserProfile" width="30" height="30" alt="user-image"
                                                     class="d-inline-block align-top avatar-header rounded-circle">
                                            </a>

                                            <div id="collapseExample3" class="collapse">
                                                <a class="dropdown-item @(ViewBag.Title == "UserProfile"? "active" : "" )" href="@Url.Action("UserProfile", "Account")">My Profile</a>
                                                <a class="dropdown-item @(ViewBag.Title == "MyDownloads"? "active" : "" )" href="@Url.Action("MyDownloads", "Home")">My Download</a>
                                                <a class="dropdown-item @(ViewBag.Title == "MySoldNotes"? "active" : "" )" href="@Url.Action("MySoldNotes", "Home")">My Sold Notes</a>
                                                <a class="dropdown-item @(ViewBag.Title == "MyRejectedNotes"? "active" : "" )" href="@Url.Action("MyRejectedNotes", "Home")">My Rejected Notes</a>
                                                <a class="dropdown-item @(ViewBag.Title == "ChangePassword"? "active" : "" )" href="@Url.Action("ChangePassword", "Account")">Change Password</a>
                                                <a class="dropdown-item btn-logout" href="@Url.Action("Login", "Account")">LogOut</a>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("LogOut", "Account")">LogOut</a></li>
                                }
                                else
                                {
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">LogIn</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- End Navigation -->

    <div class="body-content">

        @RenderBody()

        <hr />

        <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row">
                    <!-- Copyright -->
                    <div class="col-md-6 col-sm-8 foot-text text-left">
                        <p>Copyright &copy; TatvaSoft All Rights Reserved.</p>
                    </div>
                    <!-- Social Icon -->
                    <div class="col-md-6 col-sm-4 foot-icon col-sm-4 text-right">
                        <ul class="social-list">
                            <li>
                                <a href="@ViewBag.URLs[0].Value">
                                    <img src="../../Content/images/facebook.png" alt="facebook-image">
                                </a>
                            </li>
                            <li>
                                <a href="@ViewBag.URLs[1].Value">
                                    <img src="../../Content/images/twitter.png" alt="twitter-image">
                                </a>
                            </li>
                            <li>
                                <a href="@ViewBag.URLs[2].Value">
                                    <img src="../../Content/images/linkedin.png" alt="linkedin-image">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
        <!-- End Footer -->

    </div>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

</body>
</html>