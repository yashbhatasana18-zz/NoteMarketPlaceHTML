
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Notes-MarketPlace</title>

    <!-- Favicon-->
    <link rel="shortcut icon" href="../../favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/icons-1.4.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/CommonJS/upload.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/AdminPanel/css/style.css" rel="stylesheet" type="text/css" />

    <!-- Responsive CSS -->
    <link href="~/Content/AdminPanel/css/responsive.css" rel="stylesheet" type="text/css" />

</head>
<body>

    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container p-0">
                <div class="row">

                    <!-- Logo -->
                    <div class="col-md-4 navbar-header">
                        <a class="navbar-brand text-left" href="@Url.Action("Dashboard", "Admin")">
                            <img src="../../Content/images/logo.png" alt="logo">
                        </a>
                    </div>

                    <!-- Link -->
                    <div class="text-right col-md-8 collapse navbar-collapse p-0" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item"><a class="nav-link @(ViewBag.Title == "Dashboard" ? "active" : "" )" href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                            <li class="nav-item dropdown">
                                <a href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false" class="nav-link nav-link-custom">
                                    Notes
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item @(ViewBag.Title == "NotesUnderReview"? "active" : "" )" href="@Url.Action("NotesUnderReview", "Admin")">Notes Under Review</a>
                                    <a class="dropdown-item @(ViewBag.Title == "PublishedNotes"? "active" : "" )" href="@Url.Action("PublishedNotes", "Admin")">Published Notes</a>
                                    <a class="dropdown-item @(ViewBag.Title == "DownloadedNotes"? "active" : "" )" href="@Url.Action("DownloadedNotes", "Admin")">Downloaded Notes</a>
                                    <a class="dropdown-item @(ViewBag.Title == "RejectedNotes"? "active" : "" )" href="@Url.Action("RejectedNotes", "Admin")">Rejected Notes</a>
                                </div>
                            </li>
                            <li class="nav-item"><a class="nav-link @(ViewBag.Title == "Members" ? "active" : "" )" href="@Url.Action("Members", "Admin")">Members</a></li>
                            <li class="nav-item"><a class="nav-link @(ViewBag.Title == "SpamReports" ? "active" : "" )" href="@Url.Action("SpamReports", "Admin")">Reports</a></li>
                            <li class="nav-item dropdown">
                                <a href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false" class="nav-link nav-link-custom">
                                    Setting
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item @(ViewBag.Title == "ManageSystemConfiguration"? "active" : "" )" href="@Url.Action("ManageSystemConfiguration", "SuperAdmin")">Manage System Configuration</a>
                                    <a class="dropdown-item @(ViewBag.Title == "ManageAdministrator"? "active" : "" )" href="@Url.Action("ManageAdministrator", "SuperAdmin")">Manage Administrator</a>
                                    <a class="dropdown-item @(ViewBag.Title == "ManageCategory"? "active" : "" )" href="@Url.Action("ManageCategory", "Admin")">Manage Category</a>
                                    <a class="dropdown-item @(ViewBag.Title == "ManageType"? "active" : "" )" href="@Url.Action("ManageType", "Admin")">Manage Type</a>
                                    <a class="dropdown-item @(ViewBag.Title == "ManageCountries"? "active" : "" )" href="@Url.Action("ManageCountries", "Admin")">Manage Countries</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="dropdown">
                                    <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                                       aria-haspopup="true" aria-expanded="false">
                                        <img src="../@ViewBag.UserProfile" width="30" height="30" alt="user-image"
                                             class="d-inline-block align-top avatar-header rounded-circle">
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" href="MyProfile.html">Update Profile</a>
                                        <a class="dropdown-item" href="ChangePassword.html">Change Password</a>
                                        <a class="dropdown-item btn-logout" href="@Url.Action("LogOut", "Account")">LogOut</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("LogOut", "Account")">LogOut</a></li>
                        </ul>
                    </div>

                    <!-- Mobile link -->
                    <div class="mobile-nav col-md-8 text-right">
                        <img src="../../Content/images/menu.png" alt="menu" id="mobile-nav-open-btn" class="text-right">
                    </div>

                    <div id="mobile-nav" class="text-left">
                        <span id="mobile-nav-close-btn">
                            <img src="../../Content/images/xmark.png" alt="close-image">
                        </span>
                        <div id="mobile-nav-content">
                            <ul class="nav navig">
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "Dashboard" ? "active" : "" )" href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                                <li class="nav-item">
                                    <a href="#collapseExample1" data-toggle="collapse" role="button"
                                       aria-expanded="false" aria-controls="collapseExample1"
                                       class="nav-link nav-link-custom">
                                        Notes
                                    </a>

                                    <div id="collapseExample1" class="collapse">
                                        <a class="dropdown-item @(ViewBag.Title == "NotesUnderReview"? "active" : "" )" href="@Url.Action("NotesUnderReview", "Admin")">Notes Under Review</a>
                                        <a class="dropdown-item @(ViewBag.Title == "PublishedNotes"? "active" : "" )" href="@Url.Action("PublishedNotes", "Admin")">Published Notes</a>
                                        <a class="dropdown-item @(ViewBag.Title == "DownloadedNotes"? "active" : "" )" href="@Url.Action("DownloadedNotes", "Admin")">Downloaded Notes</a>
                                        <a class="dropdown-item @(ViewBag.Title == "RejectedNotes"? "active" : "" )" href="@Url.Action("RejectedNotes", "Admin")">Rejected Notes</a>
                                    </div>
                                </li>
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "Members" ? "active" : "" )" href="@Url.Action("Members", "Admin")">Members</a></li>
                                <li class="nav-item"><a class="nav-link @(ViewBag.Title == "SpamReports" ? "active" : "" )" href="@Url.Action("SpamReports", "Admin")">Reports</a></li>
                                <li class="nav-item">
                                    <a href="#collapseExample2" data-toggle="collapse" role="button"
                                       aria-expanded="false" aria-controls="collapseExample2"
                                       class="nav-link nav-link-custom">
                                        Setting
                                    </a>

                                    <div id="collapseExample2" class="collapse">
                                        <a class="dropdown-item @(ViewBag.Title == "ManageSystemConfiguration"? "active" : "" )" href="@Url.Action("ManageSystemConfiguration", "SuperAdmin")">Manage System Configuration</a>
                                        <a class="dropdown-item @(ViewBag.Title == "ManageAdministrator"? "active" : "" )" href="@Url.Action("ManageAdministrator", "SuperAdmin")">Manage Administrator</a>
                                        <a class="dropdown-item @(ViewBag.Title == "ManageCategory"? "active" : "" )" href="@Url.Action("ManageCategory", "Admin")">Manage Category</a>
                                        <a class="dropdown-item @(ViewBag.Title == "ManageType"? "active" : "" )" href="@Url.Action("ManageType", "Admin")">Manage Type</a>
                                        <a class="dropdown-item @(ViewBag.Title == "ManageCountries"? "active" : "" )" href="@Url.Action("ManageCountries", "Admin")">Manage Countries</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a href="#collapseExample3" data-toggle="collapse" role="button"
                                       aria-expanded="false" aria-controls="collapseExample3"
                                       class="nav-link nav-link-custom">
                                        <img src="../@ViewBag.UserProfile" width="30" height="30" alt="user-image"
                                             class="d-inline-block align-top avatar-header rounded-circle">
                                    </a>

                                    <div id="collapseExample3" class="collapse">
                                        <a class="dropdown-item" href="MyProfile.html">Update Profile</a>
                                        <a class="dropdown-item" href="ChangePassword.html">Change Password</a>
                                        <a class="dropdown-item btn-logout" href="@Url.Action("LogOut", "Account")">LogOut</a>
                                    </div>
                                </li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("LogOut", "Account")">LogOut</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- End Navigation -->

    <!-- Content -->
    <section id="content">
        <div class="container">

            @RenderBody()

        </div>
    </section>

    <hr class="p-0 m-0">

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <!-- Copyright -->
                <div class="col-md-6 col-sm-2 foot-text text-left">
                    <p>Version : 1.1.24</p>
                </div>
                <!-- Social Icon -->
                <div class="col-md-6 col-sm-10 foot-text col-sm-4 text-right">
                    <p>Copyright &copy; TatvaSoft All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <!-- Modernizr JS -->
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <!-- JQuery -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>

    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Content/CommonJS/upload.js"></script>
    <script src="~/Content/AdminPanel/js/script.js"></script>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

</body>
</html>
