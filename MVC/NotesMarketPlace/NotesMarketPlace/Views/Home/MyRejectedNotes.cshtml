@model List<NotesMarketPlace.Models.MyRejectedNotesModel>

@{
    ViewBag.Title = "MyRejectedNotes";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<!-- Content -->
<section id="content">
    <div class="container">

        @using (Html.BeginForm("MyRejectedNotes", "Home", FormMethod.Post))
        {
            <div class="row heading">
                <div class="col-md-6 col-sm-6 p-0">
                    <h3 class="heading-1">My Rejected Notes</h3>
                </div>

                <div class="col-md-6 col-sm-6 text-right search-1 p-0 form-group has-search">
                    <img src="~/Content/images/search-icon.png" class="form-control-feedback" alt="search-icon">
                    @Html.TextBox("txtSearch1", null, new { @class = "form-control input-search", @placeholder = "Search" })
                    <button class="btn btn-general" type="submit">Search</button>
                </div>

            </div>
        }

        <div class="row">
            <div class="table-top table-responsive">
                <table class="table ">
                    <thead>
                        <tr>
                            <th class="text-center" scope="col">Sr No.</th>
                            <th scope="col">Note Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Remarks</th>
                            <th scope="col">Clone</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6" style="text-align:center">No Data Available</td>
                                </tr>
                            }
                            else
                            {
                                int count = 0;
                                foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td class="text-center" scope="row">@count</td>
                                        <td class="td-blue">@item.Title</td>
                                        <td>@item.Category</td>
                                        <td>@item.Remark</td>
                                        <td class="td-blue" onclick="Clone(@item.Id)">Clone</td>
                                        <td class="text-center">
                                            <div class="dropdown">
                                                <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                                                   aria-haspopup="true" aria-expanded="false">
                                                    <img src="../images/dots.png" alt="dot-image">
                                                </a>

                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                    <a class="dropdown-item" onclick="Download(@item.Id)">Download Notes</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-md-12 num">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <img src="../images/left-arrow.png" alt="left-arrow">
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link active" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <img src="../images/right-arrow.png" alt="right-arrow">
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</section>

