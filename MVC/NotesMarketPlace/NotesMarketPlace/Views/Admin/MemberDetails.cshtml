
@{
    ViewBag.Title = "MemberDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="content">
    <div class="container">

        <div class="row heading">
            <div class="col-md-12 p-0">
                <h3 class="heading-1">Member Details</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2 col-sm-2">
                <img src="/@ViewBag.Details.ProfileImage" alt="member-image" style=" width: 175px; ">
            </div>
            <div class="col-md-5 col-sm-4">
                <div class="row">
                    <div class="col-md-5 td-1">
                        First Name:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.FirstName
                    </div>
                    <div class="col-md-5 td-1">
                        Last Name:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.LastName
                    </div>
                    <div class="col-md-5 td-1">
                        Email:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.Email
                    </div>
                    <div class="col-md-5 td-1">
                        DOB:
                    </div>
                    <div class="col-md-7 td-3">
                        @(ViewBag.Details.DOB ?? "N/A")
                    </div>
                    <div class="col-md-5 td-1">
                        Phone Number:
                    </div>
                    <div class="col-md-7 td-3">
                        @(ViewBag.Details.Phone ?? "N/A")
                    </div>
                    <div class="col-md-5  td-1">
                        College/University:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.University
                    </div>
                </div>
            </div>
            <span class="vertical-line"></span>
            <div class="col-md-4 col-sm-4">
                <div class="row">
                    <div class="col-md-5 td-1">
                        Address 1:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.Address1
                    </div>
                    <div class="col-md-5 td-1">
                        Address 2:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.Address2
                    </div>
                    <div class="col-md-5 td-1">
                        City:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.City
                    </div>
                    <div class="col-md-5 td-1">
                        State:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.State
                    </div>
                    <div class="col-md-5 td-1">
                        Country:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.Country
                    </div>
                    <div class="col-md-5  td-1">
                        Zip Code:
                    </div>
                    <div class="col-md-7 td-3">
                        @ViewBag.Details.Zipcode
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <div class="row heading">
            <div class="col-md-12 p-0">
                <h3 class="heading-1">Notes</h3>
            </div>
        </div>

        <div class="row">
            <div class="table-top table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Sr No.</th>
                            <th scope="col">Note Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-center">Downloaded Notes</th>
                            <th scope="col" class="text-center">Total Earnings</th>
                            <th scope="col">Date Added</th>
                            <th scope="col">Published Date</th>
                            <th scope="col" class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ if (Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="9" style="text-align:center;">No Record Found</td>
                                </tr>
                            }
                            else
                            {
                                int count = 0;
                                foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td scope="row" class="text-center">@count</td>
                                        <td class="td-text" style="cursor:pointer;" onclick="NoteDetail('@item.NoteId')">@item.Title</td>
                                        <td>@item.Category</td>
                                        <td>@item.Status</td>
                                        <td class="text-center td-text">@item.DownloadedNote</td>
                                        <td class="text-center">$@(item.Earning ?? 0)</td>
                                        <td>@item.DateAdded.ToString("dd-MM-yyyy, HH:mm")</td>
                                        <td>@(item.PublishedDate == null ? "N/A" : item.PublishedDate.GetValueOrDefault().ToString("dd-MM-yyyy, HH:mm"))</td>
                                        <td class="text-center">
                                            <div class="dropdown">
                                                <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                                                   aria-haspopup="true" aria-expanded="false">
                                                    <img src="~/Content/images/dots.png" alt="dot-image">
                                                </a>

                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                    <a class="dropdown-item" href="/Admin/DownloadFile?noteid=@item.NoteId">Download Notes</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @* Pagination *@
        @{
            double totalPages = ViewBag.TotalPages;

            <div class="row text-center">
                <div class="col-md-12 num">
                    <ul class="pagination justify-content-center">

                        @if (ViewBag.PageNumber == 1)
                        {
                            <li class="page-item">
                                <a class="page-link" aria-label="Previous" href="@Url.Action("Dashboard", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber })">
                                    <img src="~/Content/images/left-arrow.png" alt="left-arrow">
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" aria-label="Previous" href="@Url.Action("Dashboard", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber - 1 })">
                                    <img src="~/Content/images/left-arrow.png" alt="left-arrow">
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            if (i == ViewBag.PageNumber)
                            {
                                <li class="page-item">
                                    @Html.ActionLink(i.ToString(), "Dashboard", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, PageNumber = i }, htmlAttributes: new { @class = "page-link active" })
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    @Html.ActionLink(i.ToString(), "Dashboard", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, PageNumber = i }, htmlAttributes: new { @class = "page-link" })
                                </li>
                            }
                        }

                        @if (ViewBag.PageNumber == totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" aria-label="Next" href="@Url.Action("Dashboard", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber })">
                                    <img src="~/Content/images/right-arrow.png" alt="right-arrow">
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" aria-label="Next" href="@Url.Action("Dashboard", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "Title" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber + 1 })">
                                    <img src="~/Content/images/right-arrow.png" alt="right-arrow">
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }

    </div>
</section>

<script>
    function Downloaded(id) {
        location.href = "DownloadedNotes?noteId=" + id;
    }

    function NoteDetail(id) {
        location.href = "../Home/NoteDetails/" + id;
    }
</script>