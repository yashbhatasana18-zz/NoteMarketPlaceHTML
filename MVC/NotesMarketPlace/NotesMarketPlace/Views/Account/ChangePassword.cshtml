@model NotesMarketPlace.Models.ChangePasswordModel

@{ var display = "none";
    if (TempData["Oldpwd"] != null)
    {
        display = "block";
    }

    var show = "none";
    if (TempData["OldpwdSame"] != null)
    {
        show = "block";
    } }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Change Password</title>

    <!-- Fav icon -->
    <link rel="shortcut icon" href="~/favicon.ico">

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <link href="~/Content/FrontPanel/css/style.css" rel="stylesheet" type="text/css" />

    <!-- Responsive CSS -->
    <link href="~/Content/FrontPanel/css/responsive.css" rel="stylesheet" type="text/css" />

    <style>

        /*Forgot Password & Change Password*/

        html,
        body {
            background: url('../../Content/images/banner-with-overlay.jpg') fixed no-repeat;
            background-size: cover;
            height: 100%;
        }

        h2 {
            font-family: "Open Sans", sans-serif;
        }

        p {
            font-family: "Open Sans", sans-serif;
            font-size: 13px;
            font-weight: 400;
            line-height: 24px;
        }

        .logo {
            margin-top: 45px;
            margin-bottom: 25px;
        }

            .logo img {
                display: block;
                margin-left: auto;
                margin-right: auto;
            }

        .main-content {
            position: absolute;
            left: 50%;
            top: 50%;
            -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
        }

        .content {
            background-color: #fff;
            padding: 40px;
            -webkit-box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
            border-radius: 4px;
        }

            .content h2 {
                color: #6255a5;
                font-size: 30px;
                font-weight: 600;
                line-height: 34px;
                text-align: center;
                margin: 0;
            }

            .content p {
                font-size: 14px;
                font-weight: 400;
                line-height: 19px;
                color: #333333;
                text-align: center;
                margin-top: 20px;
                margin-bottom: 45px;
            }

        .elements {
            position: relative;
        }

            .elements span {
                font-family: "Open Sans", sans-serif;
                font-size: 14px;
                font-weight: 400;
                line-height: 20px;
                color: #333333;
            }

            .elements input {
                font-family: "Open Sans", sans-serif;
                font-size: 16px;
                font-weight: 400;
                line-height: 20px;
                color: #000;
                border: 1px solid #6255a5;
                width: 400px;
                height: 40px;
                border-radius: 5px;
                margin-top: 10px;
                margin-bottom: 20px;
            }

            .elements img {
                position: absolute;
                right: 8px;
                bottom: 12px;
            }

        .btn-submit {
            width: 400px;
            height: 35px;
            border-radius: 3px;
            background-color: #6255a5;
            color: #fff;
            font-family: 'Open Sans', sans-serif;
            font-size: 16px;
            line-height: 22px;
            padding: 3px 0 0 0;
            text-transform: uppercase;
        }

            .btn-submit:hover {
                color: #fff;
            }

        @@media (min-width: 768px) and (max-width: 1024px) {

            .content {
                padding: 40px;
            }

                .content h2 {
                    font-size: 30px;
                }

            .elements span {
                font-size: 14px;
            }

            .elements input {
                width: 450px;
            }

            .btn-submit {
                width: 450px;
            }
        }

        @@media (max-width: 767px) {

            .content {
                padding: 35px;
            }

                .content h2 {
                    font-size: 26px;
                }

                .content p {
                    margin-bottom: 30px;
                }

            .elements span {
                font-size: 12px;
            }

            .elements input {
                width: 360px;
                height: 40px;
                font-size: 12px;
                margin-top: 8px;
                margin-bottom: 15px;
            }

            #change-pwd .content .elements img {
                width: 22px;
                bottom: 14px;
            }

            .btn-submit {
                width: 360px;
            }
        }

        @@media (max-width: 480px) {

            .logo img {
                width: 180px;
            }

            .content {
                padding: 30px;
            }

                .content h2 {
                    font-size: 22px;
                }

                .content p {
                    margin-bottom: 25px;
                }

            .elements span {
                font-size: 11px;
            }

            .elements input {
                width: 220px;
                height: 30px;
                font-size: 11px;
                margin-top: 8px;
                margin-bottom: 15px;
            }

            #change-pwd .content .elements img {
                width: 18px;
                right: 10px;
                bottom: 10px;
            }

            .btn-submit {
                width: 220px;
                font-size: 16px;
            }
        }

        @@media (max-width: 380px) {

            .logo img {
                width: 160px;
            }

            .content {
                padding: 25px;
            }

                .content h2 {
                    font-size: 18px;
                }

                .content p {
                    font-size: 11px;
                    margin-top: 10px;
                    margin-bottom: 20px;
                }

            .elements span {
                font-size: 12px;
            }

            .elements input {
                font-size: 10px;
                width: 200px;
                height: 35px;
                margin-bottom: 20px;
            }

            #change-pwd .content .elements img {
                width: 16px;
                right: 10px;
                bottom: 12px;
            }

            .btn-submit {
                width: 200px;
                font-size: 15px;
            }
        }

        /*Change Password*/

        #change-pwd .elements i {
            position: absolute;
            right: 20px;
            bottom: 16px;
            font-size: 20px;
            color: #8a8a8a;
            cursor: pointer;
            z-index: 2;
        }
    </style>
</head>

<body>

    <!-- Change password -->
    <div id="change-pwd">
        <div class="main-content">
            <div class="logo">
                <img src="~/Content/images/top-logo.png" alt="Logo" class="img-fluid">
            </div>

            <div class="content">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()
                    <h2>Change Password</h2>
                    <p>Enter your new password to change your password</p>
                    <div class="form-group">
                        <div class="elements">
                            @Html.LabelFor(model => model.OldPassword, "Old Password")
                            @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control", type = "password", placeholder = "Enter your old Password", id = "OldPassword" })
                            <img src="~/Content/images/eye.png" class="toggle-password" toggle="#OldPassword" alt="eye-image">
                        </div>
                        @Html.ValidationMessageFor(model => model.OldPassword, "Old Password is wrong", new { @class = "text-danger", style = "display: " + display })
                    </div>
                    <div class="form-group">
                        <div class="elements">
                            @Html.LabelFor(model => model.NewPassword, "New Password")
                            @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", type = "password", placeholder = "Enter your new Password", id = "NewPassword" })
                            <img src="~/Content/images/eye.png" class="toggle-password" toggle="#NewPassword" alt="eye-image">
                        </div>
                        @Html.ValidationMessageFor(model => model.NewPassword, "New Password not match with Old Password", new { @class = "text-danger", style = "display: " + show })
                    </div>
                    <div class="form-group">
                        <div class="elements">
                            @Html.LabelFor(model => model.ConfirmPassword, "Confirm Password")
                            @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", type = "password", placeholder = "Enter your confirm Password", id = "ConfirmPassword" })
                            <img src="~/Content/images/eye.png" class="toggle-password" toggle="#ConfirmPassword" alt="eye-image">
                        </div>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "Does not match with new Password", new { @class = "text-danger", id = "validation-msg-pass", style = "display: none;" })
                    </div>
                    <div id="submit-btn">
                        <button class="btn btn-submit" type="submit">SUBMIT</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Change password end -->
    <!-- JQuery -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Content/FrontPanel/js/script.js"></script>

    <script>
        $('#ConfirmPassword').keyup(function () {
            if ($(this).val() != $('#NewPassword').val()) {
                $('#validation-msg-pass').css('display', 'block');
                $('.btn-submit').prop('disabled', true);
            } else {
                $('#validation-msg-pass').css('display', 'none');
                $('.btn-submit').prop('disabled', false);
            }
        });
    </script>
</body>
</html>