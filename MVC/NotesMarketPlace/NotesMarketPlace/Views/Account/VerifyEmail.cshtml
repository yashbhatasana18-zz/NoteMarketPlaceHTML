
@{
    ViewBag.Title = "VerifyEmail";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>VerifyEmail</h2>

<br />
<br />
<div class="alert alert-info" id="previous">
    <strong>Confirm Your Account</strong>
    <input type="submit" class="btn btn-primary" value="Confirm" onclick="Verified()" />
</div>

<div class="alert alert-success" id="after" style="display:none;">
    <strong>
        Your Account Is Active Now
    </strong>
</div>

<script>
function Verified() {
    $.ajax({
        type: "post",
        url: "/Account/RegisterConfirm",
        data: { 'userID': '@ViewBag.userID' },
        success: function (msg) {
            $("#previous").hide();
            $("#after").show();
            alert(msg);
        }
    })
}
</script>

